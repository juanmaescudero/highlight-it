{
    "manifest_version": 3,
    "name": "Highlight it",
    "version": "1.1.2",
    "description": "Chrome extension to highlight any text and save it to read later",
    "permissions": [
        "contextMenus",
        "storage",
        "activeTab"
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'none'"
    },
    "author": "develjuanma",
    "icons": {
        "128": "icon.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "128": "icon.png"
        }
    }
}